    <servlet>
        <servlet-name>RegisterAccount</servlet-name>
        <servlet-class>com.news.hub.web.controller.RegisterAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StartAppServlet</servlet-name>
        <servlet-class>com.news.hub.web.controller.StartAppServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.news.hub.web.controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlent</servlet-name>
        <servlet-class>com.news.hub.controller.LoginServlent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.news.hub.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.news.hub.controller.DashboardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NotificationServlet</servlet-name>
        <servlet-class>com.news.hub.controller.NotificationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditStudentDetails</servlet-name>
        <servlet-class>com.news.hub.controller.EditStudentDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.news.hub.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendEmail</servlet-name>
        <servlet-class>com.news.hub.controller.SendEmail</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterAccount</servlet-name>
        <url-pattern>/RegisterAccount.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StartAppServlet</servlet-name>
        <url-pattern>/StartAppServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlent</servlet-name>
        <url-pattern>/LoginServlent.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/DashboardServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NotificationServlet</servlet-name>
        <url-pattern>/NotificationServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditStudentDetails</servlet-name>
        <url-pattern>/EditStudentDetails.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendEmail</servlet-name>
        <url-pattern>/SendEmail.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>500</error-code>
        <location>/page_under_construction.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/page_under_construction.jsp</location>
    </error-page>
